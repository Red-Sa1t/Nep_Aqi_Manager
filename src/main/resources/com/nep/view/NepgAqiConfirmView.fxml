<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/17.0.12"
           fx:controller="com.nep.controller.NepgAqiConfirmViewController"
           prefWidth="720.0" prefHeight="560.0">

    <GridPane alignment="CENTER">
        <padding>
            <Insets top="30" bottom="30" left="40" right="40"/>
        </padding>

        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>

        <StackPane
                style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 2);"
                GridPane.rowSpan="2147483647"/>

        <Label text="AQI反馈数据实测信息"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3F51B5;"
               GridPane.rowIndex="0" alignment="CENTER"/>

        <MFXTableView fx:id="txt_tableView"
                      prefHeight="280.0" prefWidth="640.0"
                      GridPane.rowIndex="1"/>

        <VBox spacing="16" GridPane.rowIndex="2"
              style="-fx-background-color: white; -fx-padding: 16; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 8, 0, 0, 1);">

            <Label text="AQI实测数据信息"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3F51B5;"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="130"/>
                    <ColumnConstraints minWidth="160"/>
                    <ColumnConstraints minWidth="60"/>
                    <ColumnConstraints minWidth="90"/>
                    <ColumnConstraints minWidth="100"/>
                    <ColumnConstraints minWidth="160"/>
                </columnConstraints>

                <!-- AQI反馈编号 -->
                <Label text="AQI反馈数据编号:" style="-fx-font-weight: 600;" GridPane.columnIndex="0"
                       GridPane.rowIndex="0"/>
                <MFXTextField fx:id="txt_afId" promptText="输入编号" prefWidth="160" GridPane.columnIndex="1"
                              GridPane.rowIndex="0"/>
                <Label text="网格员:" style="-fx-font-weight: 600;" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                <Label fx:id="label_realName" style="-fx-text-fill: #616161;" GridPane.columnIndex="4"
                       GridPane.rowIndex="0"/>


                <!-- SO2 -->
                <Label text="二氧化硫 (SO2) 浓度:" style="-fx-font-weight: 600;" GridPane.columnIndex="0"
                       GridPane.rowIndex="1"/>
                <MFXTextField fx:id="txt_so2" promptText="μg/m³" prefWidth="160" GridPane.columnIndex="1"
                              GridPane.rowIndex="1"/>
                <Label text="μg/m³" style="-fx-text-fill: #757575;" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Label text="浓度等级:" style="-fx-font-weight: 600;" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <Label fx:id="label_so2level" style="-fx-font-weight: bold; -fx-text-fill: #3F51B5;"
                       GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                <Label fx:id="label_so2explain"
                       style="-fx-background-radius: 12; -fx-padding: 4 10; -fx-text-fill: white;"
                       GridPane.columnIndex="5" GridPane.rowIndex="1"/>

                <!-- CO -->
                <Label text="一氧化碳 (CO) 浓度:" style="-fx-font-weight: 600;" GridPane.columnIndex="0"
                       GridPane.rowIndex="2"/>
                <MFXTextField fx:id="txt_co" promptText="μg/m³" prefWidth="160" GridPane.columnIndex="1"
                              GridPane.rowIndex="2"/>
                <Label text="μg/m³" style="-fx-text-fill: #757575;" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <Label text="浓度等级:" style="-fx-font-weight: 600;" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                <Label fx:id="label_colevel" style="-fx-font-weight: bold; -fx-text-fill: #3F51B5;"
                       GridPane.columnIndex="4" GridPane.rowIndex="2"/>
                <Label fx:id="label_coexplain"
                       style="-fx-background-radius: 12; -fx-padding: 4 10; -fx-text-fill: white;"
                       GridPane.columnIndex="5" GridPane.rowIndex="2"/>

                <!-- PM2.5 -->
                <Label text="细颗粒物 (PM2.5) 浓度:" style="-fx-font-weight: 600;" GridPane.columnIndex="0"
                       GridPane.rowIndex="3"/>
                <MFXTextField fx:id="txt_pm" promptText="μg/m³" prefWidth="160" GridPane.columnIndex="1"
                              GridPane.rowIndex="3"/>
                <Label text="μg/m³" style="-fx-text-fill: #757575;" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <Label text="浓度等级:" style="-fx-font-weight: 600;" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                <Label fx:id="label_pmlevel" style="-fx-font-weight: bold; -fx-text-fill: #3F51B5;"
                       GridPane.columnIndex="4" GridPane.rowIndex="3"/>
                <Label fx:id="label_pmexplain"
                       style="-fx-background-radius: 12; -fx-padding: 4 10; -fx-text-fill: white;"
                       GridPane.columnIndex="5" GridPane.rowIndex="3"/>

                <!-- 实测AQI最终等级 -->
                <Label text="实测AQI最终等级:" style="-fx-font-weight: 600;" GridPane.columnIndex="0"
                       GridPane.rowIndex="4"/>
                <Label fx:id="label_confirmlevel" style="-fx-font-weight: bold; -fx-text-fill: #3F51B5;"
                       GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label fx:id="label_confirmexplain"
                       style="-fx-background-radius: 12; -fx-padding: 4 10; -fx-text-fill: white;"
                       GridPane.columnIndex="2" GridPane.columnSpan="4" GridPane.rowIndex="4"/>

            </GridPane>

            <!-- 提交按钮 -->
            <HBox alignment="CENTER_RIGHT">
                <MFXButton text="提交数据" onAction="#confirmData"
                           prefHeight="40.0" prefWidth="100.0"
                           style="-fx-font-weight: bold; -fx-background-color: #3F51B5; -fx-text-fill: white; -fx-background-radius: 8;"/>
            </HBox>
        </VBox>
    </GridPane>
</StackPane>
